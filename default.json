{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitBodyTable": true,
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    ":gitSignOff"
  ],
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": [
        "boto3"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths",
    "npmDedupe"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "behind-base-branch"
}
