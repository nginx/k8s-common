{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "extends": [
    ":dependencyDashboard",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "prConcurrentLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "rebaseWhen": "auto"
}
